/*

Ex4 :Write a program in C to print the elements of an array in reverse
order.

name sabri talaat elenani .
*/
#include <stdio.h>
#include <string.h>

int main()
{
    int cnt =0 , x ,arr[15] = {0};
    
    printf("Input the number of elements to store in the array (max 15) : ");
    scanf("%d",&x);
    
    
    printf("Input %d number of elements in the array :\n",x);
    while( cnt<x ){
        
        printf("elment-%d : ",cnt+1);
        scanf("%d",&arr[cnt]);
        cnt++;
    }
    
    printf("The elements of array in reverse order are :\n");
    cnt=0 ;
    while( cnt<x ){
        
        printf("element - %d : %d\n",x-cnt,arr[x-cnt-1]);
        cnt++ ;
    }
    
    
    return 0;
}
